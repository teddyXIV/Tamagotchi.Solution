@{
    Layout = "_Layout";
}

<body>
    <div class="card" id="tama-card" style="width: 18rem;">
        @if (!Model.Alive)
        {
            <style>
                #tama-photo {
                    transform: rotate(180deg);
                }
            </style>
        }
        <style>
            #tama-card {
                color: @Model.Color;
            }
        </style>

